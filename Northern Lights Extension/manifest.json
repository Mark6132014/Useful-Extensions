{
  "name": "Northern Lights Extension",
  "version": "1.0",
  "description": "Watch the northern lights on any website.",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service.js"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "48": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["itzgametime.html", "cursor.png", "itzgametime.css", "itzgametime.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
